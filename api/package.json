{
  "name": "smart-workflow-api",
  "version": "0.1.0",
  "private": true,
  "description": "Express API for Smart Workflow Dashboard",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "start": "node dist/app.js",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts",
    "bootstrap:localstack": "tsx src/scripts/bootstrapLocalstack.ts",
    "worker": "npm run build && node dist/scripts/runWorker.js",
    "scheduler": "tsx src/scripts/runScheduler.ts",
    "scheduler:once": "SCHEDULER_RUN_ONCE=true npm run scheduler",
    "test": "node --import tsx --test src/**/*.test.ts",
    "test:integration": "npm run bootstrap:localstack && LOCALSTACK_HOST_OVERRIDE=localhost SQS_ENDPOINT=http://localhost:4566 S3_ENDPOINT=http://localhost:4566 node --import tsx --test src/tests/integration/**/*.test.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.540.0",
    "@aws-sdk/client-ses": "^3.540.0",
    "@aws-sdk/client-sqs": "^3.540.0",
    "cors": "^2.8.5",
    "cron-parser": "^4.9.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "node-fetch": "^3.3.2",
    "jose": "^5.3.0",
    "pg": "^8.11.5",
    "pino": "^9.0.0",
    "pino-http": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/pg": "^8.11.5",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.57.0",
    "pino-pretty": "^11.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5"
  }
}
